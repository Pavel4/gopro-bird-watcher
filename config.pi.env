# Конфигурация для Raspberry Pi 5

# === ИСТОЧНИК ВИДЕО ===
INPUT_SOURCE=usb

# --- USB режим (Linux на Raspberry Pi) ---
USB_DEVICE=/dev/video1
USB_RESOLUTION=1080
USB_FPS=30

# Пути
OUTPUT_DIR=/app/recordings
LOG_FILE=/app/logs/motion_detector.log
CONTROL_FILE=/app/control/command

# Буфер записи
BUFFER_SECONDS=5
POST_MOTION_SECONDS=5

# Пороги детекции
MIN_CONTOUR_AREA=500
MIN_MOTION_FRAMES=3
MOTION_AREA_PERCENT=3.0
EXTEND_MOTION_PERCENT=0.2

# Отладка
DEBUG_MOTION=false
AUTO_START_MOTION=true
SEGMENT_DURATION=1

# ROI
ROI_ENABLED=false
ROI_X=0
ROI_Y=0
ROI_WIDTH=0
ROI_HEIGHT=0

# === УПРАВЛЕНИЕ ХРАНИЛИЩЕМ (для 128GB SD карты) ===
MAX_RECORDING_AGE_DAYS=30
MIN_FREE_SPACE_GB=10
AUTO_CLEANUP_ENABLED=true
CLEANUP_INTERVAL_HOURS=1

# === TELEGRAM БОТ ===
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_SEND_ON_MOTION=true
TELEGRAM_SEND_MANUAL=false
TELEGRAM_MAX_VIDEO_MB=45

# === МОНИТОРИНГ ПРОИЗВОДИТЕЛЬНОСТИ ===
ENABLE_FPS_LOGGING=true
ENABLE_CPU_TEMP_MONITORING=true
CPU_TEMP_WARNING_C=75
CPU_TEMP_CRITICAL_C=85
